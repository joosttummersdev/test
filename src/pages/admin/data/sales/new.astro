---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { supabase } from '../../../../lib/supabaseClient';

// Get all suppliers
const { data: suppliers } = await supabase
  .from('suppliers')
  .select('*')
  .order('name');

// Get all agents
const { data: agents } = await supabase
  .from('profiles')
  .select('id, first_name, last_name')
  .eq('role', 'agent')
  .order('first_name');
